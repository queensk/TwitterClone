</div>

@code {
    [Parameter]
    public Posts posts { get; set; }
    [Parameter]
    public EventCallback<Posts> OnShowComments { get; set; }
    [Parameter]
    public User user {get; set;}

    private async Task ShowComments()
    {
        await OnShowComments.InvokeAsync(posts);
    }
}
